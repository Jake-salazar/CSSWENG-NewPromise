{{> navadmin}}
<main id="main">
    <!-- ======= Breadcrumbs ======= -->
    <section id="breadcrumbs" class="breadcrumbs">
      <div class="container">
        <div class="d-flex justify-content-between align-items-center">
          <h2>Orders</h2>
          <ol>
            <li><a href="admin">Dashboard</a></li>
            <li>Orders</li>
          </ol>
        </div>
      </div>
    </section><!-- End Breadcrumbs -->
    <!-- ======= Testimonials Section ======= -->
    <section id="testimonials" class="testimonials">
      <div class="container">
        <div class="nav search-row" id="top_menu">
            <ul class="nav top-menu">
              <li>
                <form class="navbar-form">
                  <input class="form-control" placeholder="Search" type="text" width="50">
                </form>
              </li>
            </ul>
             
         </div>
        <div class="row">
          <div class="col-lg-12">
            <section class="panel">
              <header class="panel-heading">
                Order Table
              </header>
              <table class="table table-striped table-advance table-hover">
                <tbody>
                  <tr>
                    <th><i class="icon_calendar"></i>DATE</th>
                    <th><i class="icon_mail_alt"></i>STATUS</th>
                    <th><i class="icon_mail_alt"></i>ITEMS</th>
                    <th><i class="icon_pin_alt"></i>CUSTOMER ADDRESS</th>
                    <th><i class="icon_mobile"></i>EMAIL</th>
                    <th><i class="icon_cogs"></i>DELIVERY DATE</th>
                    <th><i class="icon_cogs"></i>COST PAID</th>
                    <th><i class="icon_cogs"></i>ACTIONS</th>
                  </tr>
                    {{#each item}}
                  <tr onclick="window.location='orderdetails';" style="cursor: pointer;">
                    <td>{{createdAt}}</td>
                    <td><a id="change" href="#" style="color: rgb(50, 192, 50);" onclick="changecolor()">{{status}}</a></td>
                    <td>{{cart.totalQty}}</td>
                    <td>{{address}}</td>
                    <td>{{emailAddress}}</td>
                    <td> TBD </td>
                    <td>â‚± {{cart.totalPrice}}</td>
                    <td>
                      <div class="btn-group">
                        <a class="btn btn-primary" href="#"><i class="bx bx-plus"></i></a>
                        <a class="btn btn-success" href="/orderdetails/{{this._id}}"><i class="bx bx-pencil"></i></a>
                        <a class="btn btn-danger" href="/order/delete/{{this._id}}"><i class="bx bx-trash"></i></a>
                      </div>
                    </td>
                  </tr>
                  {{/each}}
                </tbody>
              </table>
            </section>
          </div>
        </div>
      </div>
    </section><!-- End Testimonials Section -->
  </main><!-- End #main -->
<script>
      function changecolor() {
        /*put change color code here?*/
         return false;
      }
</script>