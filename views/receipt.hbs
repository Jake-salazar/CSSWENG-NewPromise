{{> nav}}
<main id="main">

    <!-- ======= Breadcrumbs ======= -->
    <section id="breadcrumbs" class="breadcrumbs">
      <div class="container">

        <div class="d-flex justify-content-between align-items-center">
          <h2>Receipt</h2>
          <ol>
            <li><a href="/">Home</a></li>
            <li>Receipt</li>
          </ol>
        </div>

      </div>
    </section><!-- End Breadcrumbs -->

    <!-- ======= Portfolio Details Section ======= -->
    <section id="portfolio-details" class="portfolio-details">
      <div class="container">
            <div class="receipt-content">
    <div class="container bootstrap snippets bootdey">
		<div class="row">
			<div class="col-md-12">
				<div class="invoice-wrapper">
					<div class="intro">
						Hi <strong>Name</strong>, 
						<br>
						This is the receipt is to acknowledge that your order has been received! 
            <br>
            We will get to you as soon as possible.
					</div>

					<div class="payment-info">
						<div class="row">
							<div class="col-sm-6">
								<span>Order No.</span>
								<strong>434334343</strong>
							</div>
							<div class="col-sm-6 text-right">
								<span>Order Date</span>
								<strong>Jul 09, 2021 - 12:20 pm</strong>
							</div>
						</div>
					</div>

					<div class="payment-details">
						<div class="row">
							<div class="col-sm-6">
								<span>Client</span>
								<strong>Name</strong>
								<p>
                  address
                  <br>
									<a href="#">Email</a>
								</p>
							</div>
							<div class="col-sm-6 text-right">
								<span>Order Received By</span>
								<strong>New Promise Hardware</strong>
								<p>
									331 El Grande Ave. <br>
									Parañaque, Kalakhang Maynila <br>
									Philippines <br>
									<a href="#">	</a>
								</p>
							</div>
						</div>
					</div>
					<div class="line-items">
            <table id="productSizes" class="table">
        <thead>
            <tr class="d-flex">
                <th style="width:10%; font-size:10px">Quantity</th>
                <th style="width:10%; font-size:10px">Unit</th>
                <th style="width:60%; font-size:10px">Item Name</th>
                <th style="width:10%; font-size:10px">Price</th>
                <th style="width:10%; font-size:10px">Total Price</th>
            </tr>
        </thead>
        <tbody>
            {{#if products}} 
             {{#each products }}
           <tr class="d-flex">
                <td style="width:10%">{{this.qty}}</td>
                <td style="width:10%">PCS</td>
                <td style="width:60%">{{this.item.productName}}</td>
                <td style="width:10%"> {{this.item.productPrice}} </td>
                <td style="width:10%"> {{this.price}} </td>
            </tr>
             {{/each }}
              {{else}}
            <tr class="d-flex">
                <td style="width:10%"> </td>
                <td style="width:10%"> </td>
                <td style="width:60%">No Products!</td>
                <td style="width:10%">  </td>
                <td style="width:10%"> </td>
            </tr>
             {{/if}}
        </tbody>
    </table>
						
						<div class="total text-right">
							<div class="field">
								Subtotal <span>₱379.00</span>
							</div>
							<div class="field">
								Shipping <span>₱0.00</span>
							</div>
							<div class="field">
								Discount <span>4.5%</span>
							</div>
							<div class="field grand-total">
								Total <span>₱312.00</span>
							</div>
						</div>

						<div class="print">
							<a href="/">
								<i class="fa fa-print"></i>
								Confirm
							</a>
						</div>
					</div>
				</div>

				<div class="footer">
					Copyright © 2021. New Promise Hardware
				</div>
			</div>
		</div>
	</div>
</div> 
      </div>
    </section><!-- End Portfolio Details Section -->

