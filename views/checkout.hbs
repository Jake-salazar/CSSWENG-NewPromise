{{> nav}}
<main id="main">

    <!-- ======= Breadcrumbs ======= -->
    <section id="breadcrumbs" class="breadcrumbs">
      <div class="container">

        <div class="d-flex justify-content-between align-items-center">
          <h2>Checkout</h2>
          <ol>
            <li><a href="/">Home</a></li>
            <li>Checkout</li>
          </ol>
        </div>

      </div>
    </section><!-- End Breadcrumbs -->

    <!-- ======= Portfolio Details Section ======= -->
    <section id="portfolio-details" class="portfolio-details">
      <div class="container">
        <form id="fcf-form-id" class="fcf-form-class" method="POST" action="/Checkout/placeOrder">
        
        <div class="fcf-form-group2">
            <label for="lastname" class="fcf-label">Last Name: </label>
            <div class="fcf-input-group2">
                <input type="text" id="lastname" name="lastname" class="fcf-form-control" required>
            </div>
        </div>

        <div class="fcf-form-group2">
            <label for="firstname" class="fcf-label">First Name: </label>
            <div class="fcf-input-group2">
                <input type="text" id="firstname" name="firstname" class="fcf-form-control" required>
            </div>
        </div>

        <div class="fcf-form-group2">
            <label for="middlename" class="fcf-label">Middle Initial: </label>
            <div class="fcf-input-group2">
                <input type="text" id="middlename" name="middlename" class="fcf-form-control" required>
            </div>
        </div>

        <div class="fcf-form-group2">
            <label for="Email" class="fcf-label">Email Address: </label>
            <div class="fcf-input-group2">
                <input type="email" id="Email" name="Email" class="fcf-form-control" required>
            </div>
        </div>

        <div class="fcf-form-group2">
            <label for="facebook" class="fcf-label">Facebook Name: </label>
            <div class="fcf-input-group2">
                <input type="text" id="facebook" name="facebook" class="fcf-form-control" required>
            </div>
        </div>

        

        <div class="fcf-form-group2">
            <label for="contact" class="fcf-label">Contact Number: </label>
            <div class="fcf-input-group2">
                <input type="number" id="contact" name="contact" class="fcf-form-control" required>
            </div>
        </div>

        <div class="fcf-form-group">
            <label for="address" class="fcf-label">Delivery Address</label>
            <div class="fcf-input-group">
                <input type="text" id="address" name="address" class="fcf-form-control" style="width: 70%;" required>
            </div>
        </div>
        <table id="productSizes" class="table">
        <thead>
            <tr class="d-flex">
                <th style="width:10%">Quantity</th>
                <th style="width:10%">Unit</th>
                <th style="width:60%">Item Name</th>
                <th style="width:10%">Price</th>
                <th style="width:10%">Total Price</th>
            </tr>
        </thead>
        <tbody>
            {{#if products}} 
             {{#each products }}
           <tr class="d-flex">
                <td style="width:10%">{{this.qty}}</td>
                <td style="width:10%">PCS</td>
                <td style="width:60%">{{this.item.productName}}</td>
                <td style="width:10%"> {{this.item.productPrice}} </td>
                <td style="width:10%"> {{this.price}} </td>
            </tr>
             {{/each }}
              {{else}}
            <tr class="d-flex">
                <td style="width:10%"> </td>
                <td style="width:10%"> </td>
                <td style="width:60%">No Products!</td>
                <td style="width:10%">  </td>
                <td style="width:10%"> </td>
            </tr>
             {{/if}}
        </tbody>
    </table>
        <hr>
        <div class="fcf-form-group">
            <h4 style="float: right;">Total: â‚± {{this.totalPrice}}</h4>
        </div>
      
        <br><br>
        <div class="text-center"><button type="submit" class="btn-get-started">Place Order</burron></div>


    </form>
      </div>
    </section><!-- End Portfolio Details Section -->

