{{> navadmin}}
<main id="main">

    <!-- ======= Breadcrumbs ======= -->
    <section id="breadcrumbs" class="breadcrumbs">
      <div class="container">

        <div class="d-flex justify-content-between align-items-center">
          <h2>Orders Details</h2>
          <ol>
            <li><a href="admin">Dashboard</a></li>
            <li>Orders Details</li>
          </ol>
        </div>

      </div>
    </section><!-- End Breadcrumbs -->

    <!-- ======= Portfolio Section ======= -->
    <section id="portfolio" class="portfolio">
      <div class="container">

        <h3>Name: {{orderItem.lastName}},{{orderItem.firstName}},{{orderItem.middleInitial}}</h3>
        <h3>Address: {{orderItem.address}}</h3>
        <h3>Email: {{orderItem.emailAddress}}</h3>
        <h3>Contact: {{orderItem.contactNumber}}</h3>
        <h4>Date: {{orderItem.createdAt}}</h4>
        <h4>Status: {{orderItem.status}} </h4>
        <br>
        <div class="choicebutton">
            <a href="">Change Status</a>
            <b class="btn">Delete</b>
        </div>
        <br>

        <table id="productSizes" class="table">
        <thead>
            <tr class="d-flex">
                <th style="width:10%">Quantity</th>
                <th style="width:10%">Item Brand</th>
                <th style="width:60%">Item Name</th>
                <th style="width:10%">Price</th>
                <th style="width:10%">Total Price</th>
            </tr>
        </thead>
        <tbody>
          {{#each orderItem.cart.items }}
            <tr class="d-flex">
                <td style="width:10%"> {{qty}}</td>
                <td style="width:10%"> {{item.productBrand}}</td>
                <td style="width:60%"> {{item.productName}}</td>
                <td style="width:10%"> {{item.productPrice}}</td>
                <td style="width:10%"> {{price}}</td>
            </tr>
          {{/each}}
            
        </tbody>
    </table>

        
      
    </div>
          

        </div>

      </div>
    </section><!-- End Portfolio Section -->

  </main><!-- End #main -->

